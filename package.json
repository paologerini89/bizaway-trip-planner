{
    "name": "bizaway-trip-planner",
    "version": "1.0.0",
    "description": "BizAway test - API Trip planner",
    "main": "dist/index.js",
    "scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "ts-node src/index.ts",
		"dev:watch": "nodemon --exec ts-node src/index.ts",
		"test": "npx tap test/**/*.test.ts",
		"test:watch": "npx tap test/**/*.test.ts --watch",
		"test:coverage": "npx tap test/**/*.test.ts --coverage",
		"test:ci": "npx tap test/**/*.test.ts --coverage --no-watch",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix"
    },
    "repository": {
		"type": "git",
		"url": "git+https://github.com/paologerini89/bizaway-trip-planner.git"
    },
    "author": "Paolo Gerini",
    "license": "ISC",
    "bugs": {
      	"url": "https://github.com/paologerini89/bizaway-trip-planner/issues"
    },
    "homepage": "https://github.com/paologerini89/bizaway-trip-planner#readme",
    "dependencies": {
		"@fastify/cors": "^10.0.1",	
	"@fastify/rate-limit": "^10.1.1",		
		"@sinclair/typebox": "^0.34.48",
		"axios": "^1.13.5",
		"dotenv": "^17.3.1",
		"fastify": "^5.7.4",
		"ioredis": "^5.3.2",
		"uuid": "^11.0.3"
    },
    "devDependencies": {
		"@types/axios": "^0.9.36",
		"@types/node": "^22.9.3",
		"@types/tap": "^15.0.11",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.16.0",
		"@typescript-eslint/parser": "^8.16.0",
		"eslint": "^9.16.0",
		"nodemon": "^3.1.13",
		"tap": "^18.8.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2"
    }
}
